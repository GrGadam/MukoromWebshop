<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="60sp"
        android:background="@color/pastel2">

        <ImageView
            android:id="@+id/backImageViewToolsUpdate"
            android:src="@drawable/arrow_back"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="5sp"
            android:contentDescription="@string/profile" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:text="@string/m_dos_t_s_title"
        android:textColor="@color/pastel5"
        android:textSize="40sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/updateSpinner"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="150sp"
        android:background="@drawable/rounded_button"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/nevTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_marginTop="200sp"
        android:text="@string/term_k_neve"
        android:textColor="@color/pastel5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />
    <EditText
        android:id="@+id/nevEditTextUpdate"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="230sp"
        android:background="@drawable/rounded_input"
        android:hint="@string/n_v"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/pastel4"
        android:layout_centerHorizontal="true"
        android:autofillHints="name" />


    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_marginTop="290sp"
        android:text="@string/r"
        android:textColor="@color/pastel5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />
    <EditText
        android:id="@+id/arEditTextUpdate"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="320sp"
        android:autofillHints="phone"
        android:background="@drawable/rounded_input"
        android:hint="@string/ar_hint"
        android:inputType="number"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/pastel4"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_marginTop="380sp"
        android:text="@string/t_pus"
        android:textColor="@color/pastel5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />
    <EditText
        android:id="@+id/tipusEditTextUpdate"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="410sp"
        android:autofillHints="name"
        android:background="@drawable/rounded_input"
        android:hint="@string/type_hint"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/pastel4"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/colorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35sp"
        android:layout_marginTop="460sp"
        android:text="@string/sz_n"
        android:textColor="@color/pastel5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal" />
    <EditText
        android:id="@+id/szinEditTextUpdate"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="490sp"
        android:autofillHints="name"
        android:background="@drawable/rounded_input"
        android:hint="@string/color_hint"
        android:inputType="text"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/pastel4"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/modifyItemButton"
        android:layout_centerHorizontal="true"
        android:layout_width="350sp"
        android:layout_height="50sp"
        android:layout_marginTop="560sp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/pastel3"
        android:text="@string/m_dos_t_s"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:typeface="normal" />

</RelativeLayout>